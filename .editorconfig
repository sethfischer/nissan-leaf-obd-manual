root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[{.vscode/extensions.json,ide-config/.vscode/extensions.json}]
end_of_line = crlf

[*.html]
max_line_length = 120

[*.py]
max_line_length = 88

[*.{bib,yml}]
indent_size = 2

[.gitmodules]
indent_style = tab

[{Makefile,*.mk}]
indent_style = tab
